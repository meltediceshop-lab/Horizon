{% comment %}
  HEADER JUGUETTOS - Versión Final con Buscador Centrado
{% endcomment %}

<header class="jgt-main-header" style="background-color: {{ section.settings.bg_color }};">
  <div class="jgt-wrapper">
    
    <div class="jgt-col jgt-logo-col">
      <a href="/">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" 
               alt="{{ shop.name }}" 
               style="max-width: {{ section.settings.logo_width }}px;">
        {% else %}
          <span class="jgt-text-logo">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <div class="jgt-col jgt-search-col">
      <form action="/search" method="get" class="jgt-search-box">
        <input type="text" name="q" placeholder="{{ section.settings.search_placeholder }}" class="jgt-input">
        <button type="submit" class="jgt-search-icon">
          <svg viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" /></svg>
        </button>
      </form>
    </div>

    <div class="jgt-col jgt-icons-col">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="jgt-nav-item" {{ block.shopify_attributes }}>
          <div class="jgt-nav-icon">
            {{ block.settings.custom_icon_svg }}
            {% if block.type == 'cart_icon' %}
              <span class="jgt-cart-badge">{{ cart.item_count }}</span>
            {% endif %}
          </div>
          <span class="jgt-nav-label">{{ block.settings.label }}</span>
        </a>
      {% endfor %}
    </div>

  </div>
</header>

<style>
  .jgt-main-header { 
    width: 100%; 
    padding: 6px 0; 
    font-family: sans-serif; 
  }

  /* Sistema de 3 columnas para centrar el medio */
  .jgt-wrapper { 
    display: flex; 
    align-items: center; 
    justify-content: space-between;
    max-width: 1440px; 
    margin: 0 auto; 
    padding: 0 20px;
  }
  
  /* Cada columna ocupa 1/3 del espacio para asegurar el centrado real */
  .jgt-col {
    flex: 1; 
    display: flex;
    align-items: center;
  }

  .jgt-logo-col { justify-content: flex-start; }
  .jgt-search-col { justify-content: center; }
  .jgt-icons-col { justify-content: flex-end; }

  .jgt-logo-col img { display: block; }
  .jgt-text-logo { color: white; font-size: 18px; font-weight: bold; text-decoration: none; }

  /* Buscador centralizado */
  .jgt-search-box { 
    background: white; 
    border-radius: 40px; 
    display: flex; 
    align-items: center; 
    padding: 2px 15px;
    height: 36px;
    width: 100%;
    max-width: 550px; /* Controla qué tan larga es la barra en el centro */
  }
  .jgt-input { 
    border: none; 
    width: 100%; 
    font-size: 14px; 
    outline: none; 
    background: transparent;
  }
  .jgt-search-icon { background: none; border: none; color: #002266; cursor: pointer; display: flex; align-items: center; }

  /* Iconos compactos a la derecha */
  .jgt-icons-col { gap: 8px; }
  .jgt-nav-item { 
    text-decoration: none; 
    color: white; 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    min-width: 55px; 
  }
  .jgt-nav-icon { width: 18px; height: 18px; position: relative; margin-bottom: 2px; }
  .jgt-nav-icon svg { width: 100%; height: 100%; fill: currentColor; }
  .jgt-nav-label { 
    font-size: 8px; 
    font-weight: 700; 
    text-transform: uppercase; 
    white-space: nowrap;
    letter-spacing: 0.2px;
  }

  .jgt-cart-badge {
    position: absolute; top: -6px; right: -8px;
    background: #e30613; color: white; border-radius: 50%;
    width: 14px; height: 14px; font-size: 8px;
    display: flex; align-items: center; justify-content: center;
  }

  @media (max-width: 1024px) {
    .jgt-search-col { display: none; } /* Ocultar en tablets/móvil para no amontonar */
  }
</style>

{% schema %}
{
  "name": "Header Juguettos PRO",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Color Fondo", "default": "#002266" },
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "range", "id": "logo_width", "min": 50, "max": 200, "step": 5, "unit": "px", "label": "Ancho Logo", "default": 120 },
    { "type": "text", "id": "search_placeholder", "label": "Buscador", "default": "Buscar" }
  ],
  "blocks": [
    {
      "type": "icon_link",
      "name": "Icono Menú",
      "settings": [
        { "type": "text", "id": "label", "label": "Etiqueta" },
        { "type": "url", "id": "link", "label": "Enlace" },
        { "type": "html", "id": "custom_icon_svg", "label": "SVG" }
      ]
    },
    {
      "type": "cart_icon",
      "name": "Carrito",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "label", "label": "Etiqueta", "default": "MI CESTA" },
        { "type": "html", "id": "custom_icon_svg", "label": "SVG Carrito" }
      ]
    }
  ],
  "presets": [
    { "name": "Header Juguettos PRO" }
  ]
}
{% endschema %}