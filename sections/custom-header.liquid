{% comment %}
  HEADER PRO JUGUETTOS - Versión Final Pulida
{% endcomment %}

<header class="jgt-main-header" style="background-color: {{ section.settings.bg_color }};">
  <div class="jgt-wrapper">
    
    <div class="jgt-col jgt-logo-col">
      <a href="/">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 250 }}" 
               alt="{{ shop.name }}" 
               style="max-width: {{ section.settings.logo_width }}px;">
        {% else %}
          <span class="jgt-text-logo">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <div class="jgt-col jgt-search-col">
      <form action="/search" method="get" class="jgt-search-box">
        <input type="text" name="q" placeholder="{{ section.settings.search_placeholder }}" class="jgt-input">
        <button type="submit" class="jgt-search-icon">
          <svg viewBox="0 0 24 24" width="22" height="22"><path fill="currentColor" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" /></svg>
        </button>
      </form>
    </div>

    <div class="jgt-col jgt-icons-col">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="jgt-nav-item" {{ block.shopify_attributes }}>
          <div class="jgt-nav-icon">
            {{ block.settings.custom_icon_svg }}
            {% if block.type == 'cart_icon' %}
              <span class="jgt-cart-badge">{{ cart.item_count }}</span>
            {% endif %}
          </div>
          <span class="jgt-nav-label">{{ block.settings.label }}</span>
        </a>
      {% endfor %}
    </div>

  </div>
</header>

<style>
  .jgt-main-header { width: 100%; padding: 15px 0; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; }
  .jgt-wrapper { 
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    max-width: 1440px; 
    margin: 0 auto; 
    padding: 0 30px;
    gap: 40px;
  }
  
  /* Logo */
  .jgt-logo-col { flex: 0 0 auto; }
  .jgt-logo-col img { display: block; }
  .jgt-text-logo { color: white; font-size: 24px; font-weight: bold; text-decoration: none; }

  /* Buscador */
  .jgt-search-col { flex: 1; max-width: 650px; }
  .jgt-search-box { 
    background: white; 
    border-radius: 50px; 
    display: flex; 
    align-items: center; 
    padding: 5px 20px;
    height: 48px;
  }
  .jgt-input { 
    border: none; 
    width: 100%; 
    font-size: 16px; 
    outline: none; 
    color: #333;
    background: transparent;
  }
  .jgt-search-icon { background: none; border: none; color: #002266; cursor: pointer; padding-top: 5px; }

  /* Iconos */
  .jgt-icons-col { display: flex; gap: 20px; align-items: flex-start; }
  .jgt-nav-item { 
    text-decoration: none; 
    color: white; 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    min-width: 70px;
    transition: opacity 0.2s;
  }
  .jgt-nav-item:hover { opacity: 0.8; }
  .jgt-nav-icon { width: 28px; height: 28px; position: relative; margin-bottom: 5px; }
  .jgt-nav-icon svg { width: 100%; height: 100%; fill: currentColor; }
  .jgt-nav-label { 
    font-size: 10px; 
    font-weight: bold; 
    text-transform: uppercase; 
    text-align: center;
    white-space: nowrap;
    letter-spacing: 0.5px;
  }

  /* Badge Carrito */
  .jgt-cart-badge {
    position: absolute; top: -8px; right: -12px;
    background: #e30613; color: white; border-radius: 50%;
    width: 18px; height: 18px; font-size: 10px;
    display: flex; align-items: center; justify-content: center; font-weight: bold;
  }

  @media (max-width: 1024px) {
    .jgt-wrapper { flex-wrap: wrap; gap: 15px; }
    .jgt-search-col { order: 3; max-width: 100%; width: 100%; }
  }
</style>

{% schema %}
{
  "name": "Header Juguettos PRO",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo Azul", "default": "#002266" },
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "range", "id": "logo_width", "min": 50, "max": 250, "step": 10, "unit": "px", "label": "Ancho Logo", "default": 160 },
    { "type": "text", "id": "search_placeholder", "label": "Texto Buscador", "default": "Buscar" }
  ],
  "blocks": [
    {
      "type": "icon_link",
      "name": "Icono Menú",
      "settings": [
        { "type": "text", "id": "label", "label": "Etiqueta (EJ: TIENDAS)" },
        { "type": "url", "id": "link", "label": "Enlace" },
        { "type": "html", "id": "custom_icon_svg", "label": "Código SVG del Icono" }
      ]
    },
    {
      "type": "cart_icon",
      "name": "Carrito",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "label", "label": "Etiqueta", "default": "MI CESTA" },
        { "type": "html", "id": "custom_icon_svg", "label": "SVG Carrito" }
      ]
    }
  ],
  "presets": [
    { "name": "Header Juguettos PRO" }
  ]
}
{% endschema %}