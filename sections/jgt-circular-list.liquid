<section class="jgt-circles" style="background-color: {{ section.settings.bg_color }};">
  <div class="jgt-circles-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="jgt-circle-item">
        <div class="jgt-circle-img">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 200, height: 200, crop: 'center' }}">
          {% else %}
            <div class="jgt-circle-placeholder"></div>
          {% endif %}
        </div>
        <span>{{ block.settings.label }}</span>
      </a>
    {% endfor %}
  </div>
</section>

<style>
  .jgt-circles { padding: 40px 0; border-bottom: 1px solid #eee; }
  .jgt-circles-grid { display: flex; flex-wrap: wrap; justify-content: center; gap: 20px; max-width: 1200px; margin: 0 auto; }
  .jgt-circle-item { text-decoration: none; display: flex; flex-direction: column; align-items: center; width: 110px; }
  .jgt-circle-img { width: 90px; height: 90px; border-radius: 50%; overflow: hidden; border: 2px solid transparent; transition: 0.3s; margin-bottom: 10px; }
  .jgt-circle-item:hover .jgt-circle-img { border-color: #002266; }
  .jgt-circle-img img { width: 100%; height: 100%; object-fit: cover; }
  .jgt-circle-item span { font-size: 12px; font-weight: bold; color: #333; text-align: center; text-transform: uppercase; }
  .jgt-circle-placeholder { background: #eee; width: 100%; height: 100%; }
</style>

{% schema %}
{
  "name": "JGT Círculos Colección",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#ffffff" }
  ],
  "blocks": [
    {
      "type": "circle",
      "name": "Círculo",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "label", "label": "Texto", "default": "Subcategoría" },
        { "type": "url", "id": "link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [ { "name": "JGT Círculos Colección" } ]
}
{% endschema %}