{% comment %}
  Banner de Imagen Estrecho - Estilo Juguettos
{% endcomment %}

<section class="jgt-full-banner-section">
  <div class="jgt-banner-wrapper-compact">
    {%- if section.settings.banner_image != blank -%}
      <img src="{{ section.settings.banner_image | image_url: width: 2000 }}" 
           alt="{{ collection.title | escape }}" 
           class="jgt-banner-img-compact"
           loading="lazy">
    {%- else -%}
      <div class="jgt-banner-placeholder-compact">Sube la imagen del banner</div>
    {%- endif -%}
  </div>
</section>

<style>
  .jgt-full-banner-section { width: 100%; margin: 0; padding: 0; }
  
  .jgt-banner-wrapper-compact {
    width: 100%;
    position: relative;
    overflow: hidden;
    /* Grosor reducido para escritorio y móvil */
    height: {{ section.settings.height_desktop }}px;
  }

  .jgt-banner-img-compact {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center center;
  }

  .jgt-banner-placeholder-compact {
    width: 100%; height: 100%; display: flex; justify-content: center; 
    align-items: center; background-color: #f0f0f0; color: #999;
  }

  @media (max-width: 768px) {
    .jgt-banner-wrapper-compact { height: {{ section.settings.height_mobile }}px; }
  }
</style>

{% schema %}
{
  "name": "JGT Banner Estrecho",
  "settings": [
    { "type": "image_picker", "id": "banner_image", "label": "Imagen del Banner" },
    { "type": "range", "id": "height_desktop", "min": 50, "max": 300, "step": 10, "unit": "px", "label": "Grosor en Escritorio", "default": 180 },
    { "type": "range", "id": "height_mobile", "min": 40, "max": 200, "step": 10, "unit": "px", "label": "Grosor en Móvil", "default": 100 }
  ],
  "presets": [{ "name": "JGT Banner Estrecho" }]
}
{% endschema %}