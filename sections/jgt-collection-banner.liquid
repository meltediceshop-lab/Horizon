{% comment %}
  Banner Panorámico Estrecho - Sin márgenes
{% endcomment %}

<section class="jgt-ultra-banner">
  <div class="jgt-banner-frame">
    {%- if section.settings.banner_image != blank -%}
      <img src="{{ section.settings.banner_image | image_url: width: 2000 }}" 
           alt="Banner" 
           class="jgt-img-fluid"
           loading="lazy">
    {%- else -%}
      <div class="jgt-placeholder">Sube tu banner panorámico aquí</div>
    {%- endif -%}
  </div>
</section>

<style>
  /* Eliminamos cualquier espacio que el tema pueda añadir por defecto */
  .jgt-ultra-banner { 
    width: 100% !important; 
    margin: 0 !important; 
    padding: 0 !important;
    line-height: 0; /* Elimina espacio extra debajo de la imagen */
  }
  
  .jgt-banner-frame {
    width: 100%;
    overflow: hidden;
    /* Control total del grosor desde el administrador */
    height: {{ section.settings.height_desktop }}px !important;
  }

  .jgt-img-fluid {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .jgt-placeholder {
    width: 100%; height: 100%; display: flex; justify-content: center; 
    align-items: center; background-color: #f7f7l7; color: #ccc; font-size: 12px;
  }

  @media (max-width: 768px) {
    .jgt-banner-frame { height: {{ section.settings.height_mobile }}px !important; }
  }
</style>

{% schema %}
{
  "name": "JGT Banner Estrecho",
  "settings": [
    { "type": "image_picker", "id": "banner_image", "label": "Imagen del Banner" },
    { "type": "range", "id": "height_desktop", "min": 40, "max": 200, "step": 5, "unit": "px", "label": "Grosor en PC", "default": 100 },
    { "type": "range", "id": "height_mobile", "min": 30, "max": 150, "step": 5, "unit": "px", "label": "Grosor en Móvil", "default": 60 }
  ],
  "presets": [{ "name": "JGT Banner Estrecho" }]
}
{% endschema %}