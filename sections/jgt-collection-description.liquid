{% comment %}
  JGT DESCRIPCIÓN DINÁMICA - Versión Ultra Configurable
  Soluciona el error de visibilidad y permite control total de diseño.
{% endcomment %}

{%- style -%}
  .jgt-desc-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .jgt-desc-wrapper-{{ section.id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: {{ section.settings.alignment }};
  }

  .jgt-text-content-{{ section.id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.font_size }}px;
    line-height: 1.6;
    overflow: hidden;
    transition: max-height 0.5s ease;
    position: relative;
  }

  /* Altura cuando está cerrado */
  .jgt-text-content-{{ section.id }}.collapsed {
    max-height: {{ section.settings.collapsed_height }}px;
  }

  /* Degradado para indicar que hay más texto */
  .jgt-text-content-{{ section.id }}.collapsed::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40px;
    background: linear-gradient(transparent, {{ section.settings.bg_color }});
    pointer-events: none;
  }

  .jgt-btn-{{ section.id }} {
    background: none;
    border: none;
    color: {{ section.settings.accent_color }};
    font-weight: bold;
    text-decoration: underline;
    cursor: pointer;
    margin-top: 15px;
    font-size: 14px;
    text-transform: uppercase;
  }
{%- endstyle -%}

<section class="jgt-desc-section-{{ section.id }}">
  <div class="jgt-desc-wrapper-{{ section.id }}">
    
    <div id="JgtDescText-{{ section.id }}" class="jgt-text-content-{{ section.id }} collapsed">
      <div class="rte">
        {%- if collection.description != blank -%}
          {{ collection.description }}
        {%- else -%}
          <p>Añade la descripción de la colección en el administrador de Shopify para ver el contenido aquí.</p>
        {%- endif -%}
      </div>
    </div>

    {%- if collection.description.size > 150 -%}
      <button 
        id="JgtBtn-{{ section.id }}" 
        class="jgt-btn-{{ section.id }}"
        onclick="toggleJgtDescription('{{ section.id }}')"
      >
        {{ section.settings.label_more }}
      </button>
    {%- endif -%}

  </div>
</section>

<script>
  function toggleJgtDescription(id) {
    const text = document.getElementById('JgtDescText-' + id);
    const btn = document.getElementById('JgtBtn-' + id);
    const isCollapsed = text.classList.contains('collapsed');

    if (isCollapsed) {
      text.classList.remove('collapsed');
      btn.textContent = "{{ section.settings.label_less }}";
    } else {
      text.classList.add('collapsed');
      btn.textContent = "{{ section.settings.label_more }}";
    }
  }
</script>

{% schema %}
{
  "name": "JGT Descripción Pro",
  "settings": [
    {
      "type": "header",
      "content": "Ajustes de Diseño"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color del botón",
      "default": "#002266"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Ancho máximo del contenido",
      "default": 800
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alineación del texto",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Espaciado (Grosor)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espacio arriba",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espacio abajo",
      "default": 40
    },
    {
      "type": "header",
      "content": "Configuración 'Leer más'"
    },
    {
      "type": "range",
      "id": "collapsed_height",
      "min": 40,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Altura visible (Cerrado)",
      "default": 80
    },
    {
      "type": "text",
      "id": "label_more",
      "label": "Etiqueta para abrir",
      "default": "Leer más"
    },
    {
      "type": "text",
      "id": "label_less",
      "label": "Etiqueta para cerrar",
      "default": "Leer menos"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Tamaño de letra",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "JGT Descripción Pro"
    }
  ]
}
{% endschema %}