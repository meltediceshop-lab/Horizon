{% comment %}
  JGT DESCRIPCIÓN ULTRA COMPACTA
  Diseñada para ser mínima, con letras y márgenes extremadamente pequeños.
{% endcomment %}

{%- style -%}
  .jgt-mini-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    /* Márgenes ultra reducidos */
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .jgt-mini-wrapper-{{ section.id }} {
    /* Ancho máximo ahora empieza en 300px */
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 10px;
    text-align: {{ section.settings.alignment }};
  }

  .jgt-mini-content-{{ section.id }} {
    color: {{ section.settings.text_color }};
    /* Letra ahora puede bajar hasta 8px */
    font-size: {{ section.settings.font_size }}px;
    line-height: 1.3;
    overflow: hidden;
    transition: max-height 0.4s ease;
    position: relative;
  }

  .jgt-mini-content-{{ section.id }}.collapsed {
    max-height: {{ section.settings.collapsed_height }}px;
  }

  /* Degradado pequeño */
  .jgt-mini-content-{{ section.id }}.collapsed::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 20px;
    background: linear-gradient(transparent, {{ section.settings.bg_color }});
    pointer-events: none;
  }

  .jgt-mini-btn-{{ section.id }} {
    background: none;
    border: none;
    color: {{ section.settings.accent_color }};
    font-weight: bold;
    text-decoration: underline;
    cursor: pointer;
    margin-top: 5px;
    /* Tamaño de letra del botón independiente y mini */
    font-size: {{ section.settings.btn_font_size }}px;
    text-transform: uppercase;
    padding: 0;
  }
{%- endstyle -%}

<section class="jgt-mini-section-{{ section.id }}">
  <div class="jgt-mini-wrapper-{{ section.id }}">
    
    <div id="JgtMiniText-{{ section.id }}" class="jgt-mini-content-{{ section.id }} collapsed">
      <div class="rte">
        {%- liquid
          assign text_to_show = section.settings.custom_text
          if text_to_show == blank
            assign text_to_show = collection.description
          endif
        -%}
        
        {%- if text_to_show != blank -%}
          {{ text_to_show }}
        {%- else -%}
          <p>Escribe tu descripción aquí.</p>
        {%- endif -%}
      </div>
    </div>

    <button 
      id="JgtMiniBtn-{{ section.id }}" 
      class="jgt-mini-btn-{{ section.id }}"
      onclick="toggleJgtMini('{{ section.id }}')"
    >
      {{ section.settings.label_more }}
    </button>

  </div>
</section>

<script>
  function toggleJgtMini(id) {
    const text = document.getElementById('JgtMiniText-' + id);
    const btn = document.getElementById('JgtMiniBtn-' + id);
    const isCollapsed = text.classList.contains('collapsed');

    if (isCollapsed) {
      text.classList.remove('collapsed');
      btn.textContent = "{{ section.settings.label_less }}";
    } else {
      text.classList.add('collapsed');
      btn.textContent = "{{ section.settings.label_more }}";
    }
  }
</script>

{% schema %}
{
  "name": "JGT Descripción Mini",
  "settings": [
    {
      "type": "richtext",
      "id": "custom_text",
      "label": "Texto de la sección"
    },
    {
      "type": "header",
      "content": "Ajustes de Tamaño (Mínimos)"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 8,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Tamaño letra principal",
      "default": 11
    },
    {
      "type": "range",
      "id": "btn_font_size",
      "min": 7,
      "max": 14,
      "step": 1,
      "unit": "px",
      "label": "Tamaño letra 'Leer más'",
      "default": 9
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 200,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Ancho del contenido",
      "default": 600
    },
    {
      "type": "header",
      "content": "Espaciado y Colores"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Fondo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Texto",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Botón",
      "default": "#002266"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Espacio arriba",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Espacio abajo",
      "default": 10
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alineación",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "collapsed_height",
      "min": 20,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Altura visible cerrado",
      "default": 40
    },
    {
      "type": "text",
      "id": "label_more",
      "label": "Texto abrir",
      "default": "Leer más"
    },
    {
      "type": "text",
      "id": "label_less",
      "label": "Texto cerrar",
      "default": "Leer menos"
    }
  ],
  "presets": [
    {
      "name": "JGT Descripción Mini"
    }
  ]
}
{% endschema %}