<!-- JUGUETTOS PROMO CATEGORIES SECTION -->
<style>
  .jgt-promo-section {
    padding: 40px 0;
    background-color: #f8f8f8;
  }
  .jgt-promo-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .jgt-promo-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  .jgt-promo-card {
    position: relative;
    display: block;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .jgt-promo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }
  .jgt-promo-card img {
    width: 100%;
    height: auto;
    display: block;
  }
  @media (max-width: 768px) {
    .jgt-promo-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="jgt-promo-section">
  <div class="jgt-promo-container">
    <div class="jgt-promo-grid">
      <a href="/collections/all" class="jgt-promo-card">
        <img src="{{ '584_Landing_Nancy_Juguettos_400x400px.jpg' | asset_url }}" alt="Nancy" loading="lazy">
      </a>
      <a href="/collections/all" class="jgt-promo-card">
        <img src="{{ '502_JUEGATERAPIA MINNIE 440X440.jpg' | asset_url }}" alt="Juegaterapia Minnie" loading="lazy">
      </a>
      <a href="/collections/all" class="jgt-promo-card">
        <img src="{{ '504_440X440 HOT WHEELS.jpg' | asset_url }}" alt="Hot Wheels" loading="lazy">
      </a>
    </div>
  </div>
</section>

